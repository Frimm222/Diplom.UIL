<Window x:Class="Diplom.UIL.Views.ExtendedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Diplom.UIL.Views"
        xmlns:vm="clr-namespace:Diplom.UIL.ViewModels"
        Title="{Binding Id}" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseButtonStyle}"/>
            <Style TargetType="{x:Type Grid}" BasedOn="{StaticResource BaseGridStyle}"/>
            <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BaseTextBlockStyle}"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.75*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding Name}"
                   Grid.ColumnSpan="2"
                   Grid.Column="0"
                   Grid.Row="0"/>
        <Image Grid.Column="0"
               Grid.Row="1"
               Grid.RowSpan="4"
               ToolTip="Изображение"
               Source="{Binding Image}" />
        <TextBlock Text=" Описание:"
                   Grid.Column="0"
                   Grid.Row="5"
                   Style="{StaticResource BaseTextTagStyle}"/>
        <ScrollViewer Grid.Column="0"
                      Grid.RowSpan="3"
                      Grid.Row="6">
            <TextBlock Text="{Binding Description}"
                       TextWrapping="Wrap" />
        </ScrollViewer>
        <TextBlock Text=" Категория:"
                   Grid.Column="1"
                   Grid.Row="1"
                   Style="{StaticResource BaseTextTagStyle}"/>
        <TextBlock Text="{Binding CategoryId}"
                   Grid.Column="1"
                   Grid.Row="2"/>
        <TextBlock Text=" Цена:"
                   Grid.Column="1"
                   Grid.Row="3"
                   Style="{StaticResource BaseTextTagStyle}"/>
        <TextBlock Text="{Binding Price}"
                   Grid.Column="1"
                   Grid.Row="4"/>
        <TextBlock Text=" Количество:"
                   Grid.Column="1"
                   Grid.Row="5"
                   Style="{StaticResource BaseTextTagStyle}"/>
        <TextBlock Text="{Binding Quantity}"
                   Grid.Column="1"
                   Grid.Row="6"/>
        <TextBlock Text=" Штрих-код:"
                   Grid.Column="1"
                   Grid.Row="7"
                   Style="{StaticResource BaseTextTagStyle}"/>   
        <TextBlock Text="{Binding Barcode}"
                   Grid.Column="1"
                   Grid.Row="8"/>   
    </Grid>
</Window>
